<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color: Light purple/white tone -->
    <solid android:color="#F5F5F5" />

    <!-- Border color and width -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Optional padding inside the shape (can be omitted) -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>